<%- include('partials/header') %>

    <div class="container-fluid-top" style="padding-bottom: 0%;">
        <h1>Transaksi</h1>
    </div>

    <div class="container-fluid">
        <h2>Room</h2>
        <% transaksi.forEach(function (foundTransaksi) { %> 
            <a href="/pembayaran/<%= foundTransaksi.roomId %>/<%= foundTransaksi.userId %> ">
                <div class="room card">
                    <div class="row transaksi">
                        <div class="col-lg-4">
                            <h4>1x Ticket <%= foundTransaksi.namaKegiatan %></h4>
                        </div>
                        <div class="col-lg-4">
                            <h4>IDR <%= foundTransaksi.hargaTicket %></h4>
                        </div>
                        <div class="col-lg-4">
                            <h4>Status: <%= foundTransaksi.statusPembayaran %></h4>
                        </div>
                    </div>
                </div>
            </a>
        <% }); %>  
    </div>

    <div class="container-fluid">
        <h2>Langganan</h2>
        <% langganan.forEach(function (foundLangganan) { %> 
            <a href="/pembayaran-langganan/<%= foundLangganan.userId %>">
                <div class="room card">
                    <div class="row transaksi">
                        <div class="col-lg-2">
                            <h4>Langganan Premium</h4>
                        </div>
                        <div class="col-lg-2">
                            <h4>IDR <%= foundLangganan.harga %></h4>
                        </div>
                        <div class="col-lg-2">
                            <h4></h4>
                        </div>
                        <div class="col-lg-2">
                            <h4>Tanggal: <%= foundLangganan.tanggal.toDateString() %> </h4>
                        </div>
                        <div class="col-lg-2">
                            <h4>Expired: <%= foundLangganan.expired.toDateString() %> </h4>
                        </div>
                        <div class="col-lg-2">
                            <h4>Status: <%= foundLangganan.statusPembayaran %> </h4>
                        </div>
                    </div>
                </div>
            </a>
        <% }); %>  
    </div>

<%- include('partials/footer') %>