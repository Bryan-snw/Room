<%- include('partials/header') %>

    <!--Content-->
    <div class="container-fluid">
        <div class="">
            <form action="/peserta-form-room-bukutamu/<%= rooms[0]._id %> " method="post">
            <h1>Room Info</h1>
            <div class="card room">
                <a href="">
                    <img class="barcode" src="/Images/qrcode.png" alt="barcode">
                </a>
                <div class="img-header-card center">
                    <img src="data:image/<%=rooms[0].img.contentType%>;base64,
                    <%=rooms[0].img.data.toString('base64')%>" class="card-img-top" alt="Picture">
                    <h4 style="text-align: center;"> <%= rooms[0].room.kegiatan %> </h4>
                </div>
                
                    <div class="center">
                        <div class="mb-3">
                            <h4><%= rooms[0].room.deskripsi %></h4>
                        </div>
                        <% let i = 0 %>
                        <% rooms[0].form.forEach(function (list) { %>     
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label"> <%= list %>  </label>
                                <input type="text" class="form-control" name=<%= list %> id="exampleFormControlInput1">
                                <% i = i + 1 %> 
                            </div>
                        <% }) %>
                                    
                    </div>
                  
            </div>
            <div class="center" style="text-align: center;">
                <button class="btn mk-btn-submit" type="submit">Simpan</button>
            </div>
            </form>
            
        </div>
    </div>


<%- include('partials/footer') %>