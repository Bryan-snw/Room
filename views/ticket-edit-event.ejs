<%- include('partials/header') %>

    <!--Content-->
    <div class="container-fluid-top">

        <div>
            <h1>Ticket</h1>
            <div class="card room">
                <div class="img-header-card center">
                    <img src="data:image/<%=rooms[0].img.contentType%>;base64,
                    <%=rooms[0].img.data.toString('base64')%>" class="card-img-top" alt="Picture">
                </div>
                <form action="/ticket-edit-event" method="post">
                    <div class="center">

                      <input type="text" hidden="hidden" value="<%= rooms[0]._id %>" name="roomId" >
                        
                        <div class="mb-3">
                          <label for="exampleFormControlInput1" class="form-label">Tiket</label>
                          <select class="form-select" name="jenisTiket" id="jenisTiket" aria-label="Default select example">
                            <option value="<%= rooms[0].ticket.jenisTicket %>"><%= rooms[0].ticket.jenisTicket %></option>
                            <option value="Berbayar">Berbayar</option>
                            <option value="Gratis">Gratis</option>
                          </select>
                        </div>

                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Harga Tiket</label>
                            <input type="number" min="0" class="form-control" name="hargaTiket" id="hargaTiket" value="<%= rooms[0].ticket.hargaTicket %>">
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Kuota Tiket</label>
                            <input type="number" min="0" class="form-control" name="kuotaTiket" id="kuotaTiket" value="<%= rooms[0].ticket.kuotaTicket %>">
                        </div>
        
            
                    </div>
                  
            </div>
            <div class="center" style="text-align: center;">
                <button class="btn mk-btn-submit" id="kirim" disabled type="submit">Selanjutnya</button>
            </div>
          </form>
        </div>
    </div>


    <script>

      $(document).ready(function() {  
        $('#custNameNext').prop('disabled', true);  
    
        function validateNextButton() { 
            var buttonDisabled = $('#hargaTiket').val().trim() === ""
            || $('#kuotaTiket').val().trim() === "";
            $('#kirim').prop('disabled', buttonDisabled); 
          } 
          
          $("#hargaTiket").click(validateNextButton);
          $("#kuotaTiket").click(validateNextButton);
          $("#hargaTiket").keyup(validateNextButton);
          $("#kuotaTiket").keyup(validateNextButton);

      }); 

    </script>


<%- include('partials/footer') %>