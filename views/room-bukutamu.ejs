<%- include('partials/header') %>

    <!--Content-->
    <div class="container-fluid-top">
      <form action="/info-bukutamu" method="post">
        <div>
            <h1>Buku Tamu</h1>

            <div class="card room">
              
              <div class="img-header-card center">
                <img src="/Images/logo.png" class="card-img-top" alt="Picture">
              </div>
                
                <div class="center">
                  <!-- Info Room -->
                    <h2>Room Info</h2>
                    <hr>

                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label ">Nama Kegiatan</label>
                        <input type="text" required class="form-control" name="namaKegiatan" id="namaKegiatan" placeholder="">
                    </div>

                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Deskripsi</label>
                        <textarea class="form-control" required name="deskripsi" id="deskripsi" rows="3"></textarea>
                    </div>

                    <div class="mb-3">
                      <label for="exampleFormControlInput1" class="form-label">Jenis</label>
                      <select class="form-select" required name="jenis" id="jenis" aria-label="Default select example">
                        <option value="On Site">On Site</option>
                        <option value="Online">Online</option>
                      </select>
                    </div>

                    <div class="mb-3">
                      <label for="exampleFormControlInput1" class="form-label">Kota</label>
                      <input type="text" required class="form-control" name="kota" id="kota" placeholder="">
                    </div>

                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Lokasi</label>
                        <input type="text" required class="form-control" name="lokasi" id="lokasi" placeholder="Hotel XYZ">
                    </div>

                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Tanggal Acara</label>
                        <input type="date" required class="form-control" name="tanggal" id="tanggal">
                    </div>

                    <div class="mb-3">
                      <div class="row">
                        <div class="col-lg-6">
                          <label for="exampleFormControlInput1" class="form-label">Mulai Pukul</label>
                          <input type="time" required class="form-control" name="mulai" id="mulai">
                        </div>
                      

                        <div class="col-lg-6">
                          <label for="exampleFormControlInput1" class="form-label">Selesai Pukul</label>
                          <input type="time" required class="form-control" name="selesai" id="selesai">
                        </div>
                      </div>
                    </div>

                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Kontak/Media Sosial</label>
                        <input required type="text" class="form-control" name="info" id="info" placeholder="08xxxxxx/instagram">
                    </div>

                    <div class="mb-3">
                      <label for="exampleFormControlInput1" class="form-label">Link</label>
                      <input type="text" class="form-control" name="link" id="link" placeholder="">
                    </div>
                  
                </div>

            </div>
            
            <div class="center" style="text-align: center;">
              <button class="btn mk-btn-submit" id="kirim" type="submit">Selanjutnya</button>
            </div>

        </div>
      </form>
    </div>
   
<%- include('partials/footer') %>