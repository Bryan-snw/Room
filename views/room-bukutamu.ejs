<%- include('partials/header') %>

    <!--Content-->
    <div class="container-fluid-top">
      <form action="/info-bukutamu" method="post">
        <div>
            <h1>Buku Tamu</h1>

            <div class="card room">
              
              <div class="img-header-card center">
                <img src="/Images/logo.png" class="card-img-top" alt="Picture">
              </div>
                
                <div class="center">
                  <!-- Info Room -->
                    <h2>Room Info</h2>
                    <hr>

                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label ">Nama Kegiatan</label>
                        <input type="text" class="form-control" name="namaKegiatan" id="namaKegiatan" placeholder="">
                    </div>

                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Deskripsi</label>
                        <textarea class="form-control" name="deskripsi" id="deskripsi" rows="3"></textarea>
                    </div>

                    <div class="mb-3">
                      <label for="exampleFormControlInput1" class="form-label">Jenis</label>
                      <select class="form-select" name="jenis" id="jenis" aria-label="Default select example">
                        <option value="On Site">On Site</option>
                        <option value="Online">Online</option>
                      </select>
                    </div>

                    <div class="mb-3">
                      <label for="exampleFormControlInput1" class="form-label">Kota</label>
                      <input type="text" class="form-control" name="kota" id="kota" placeholder="">
                    </div>

                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Lokasi</label>
                        <input type="text" class="form-control" name="lokasi" id="lokasi" placeholder="Hotel XYZ">
                    </div>

                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Tanggal Acara</label>
                        <input type="date" class="form-control" name="tanggal" id="tanggal">
                    </div>

                    <div class="mb-3">
                      <div class="row">
                        <div class="col-lg-6">
                          <label for="exampleFormControlInput1" class="form-label">Mulai Pukul</label>
                          <input type="time" class="form-control" name="mulai" id="mulai">
                        </div>
                      

                        <div class="col-lg-6">
                          <label for="exampleFormControlInput1" class="form-label">Selesai Pukul</label>
                          <input type="time" class="form-control" name="selesai" id="selesai">
                        </div>
                      </div>
                    </div>

                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Info Tambahan</label>
                        <input type="text" class="form-control" name="info" id="info" placeholder="http::/instagram.com">
                    </div>
                  
                </div>

            </div>
            
            <div class="center" style="text-align: center;">
              <button class="btn mk-btn-submit" id="kirim" type="submit" disabled="disabled">Selanjutnya</button>
            </div>

        </div>
      </form>
    </div>

    <script>

      $(document).ready(function() {  
        $('#custNameNext').prop('disabled', true);  
    
        function validateNextButton() { 
            var buttonDisabled = $('#namaKegiatan').val().trim() === '' 
            || $('#deskripsi').val().trim() === ''
            || $('#kota').val().trim() === ''
            || $('#lokasi').val().trim() === ''
            || $('#tanggal').val() === null
            || $('#mulai').val() === null
            || $('#selesai').val() === null;
            $('#kirim').prop('disabled', buttonDisabled); 
          } 
    
          $('#namaKegiatan').on('keyup', validateNextButton);
          $('#deskripsi').on('keyup', validateNextButton);
          $('#kota').on('keyup', validateNextButton);
          $('#lokasi').on('keyup', validateNextButton);
          $('#tanggal').on('keyup', validateNextButton);
          $('#mulai').on('keyup', validateNextButton);
          $('#selesai').on('keyup', validateNextButton);
      }); 

    </script>
   
<%- include('partials/footer') %>